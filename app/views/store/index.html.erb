<div class="owl-carousel">
    <% @sliders.each do |slide| %>
        <div class='slide'>
            <%= image_tag(slide.image_url) %>
        </div>
    <% end %>
</div>
<div id="catalog">    
 
    <h2 id="menu-with-bg">Меню</h2>
    <div class="inner wrapper">
    

    <% @products.group_by(&:category).sort.each do |category, products| %>
        <% products.each do |product| %>
             <div class="entry 
                
                <%= is_new(product) %>
                <%= is_hot(product) %>
                <%= is_sale(product) %>">
                
                <%= image_tag(product.image_url) %>
                <h3><%= product.title %></h3>
                <p><%= product.category %></p>
                <p> <strong>Состав: </strong> <%= sanitize(product.description) %></p>
                <div class="price_line">
                    <span class="price"><%= to_tenge(product.price) %></span>
                    <%= button_to 'Добавить в корзину',
                        line_items_path(product_id: product),
                        remote: true %>
                </div>
            </div>
        <% end %>    

    <% end %>
    </div>
</div>


<div id="reviews">
    <div class="wrapper">
        <h2>Отзывы</h2>
        <% if @reviews.count > 0 %>
            <% @reviews.each do |review| %>
                <div class="review">
                    <span class="name"><%= review.name %></span>
                    <span class="company"><%= review.company_name %></span>
                    <p><%= review.description %></p>
                    <%= to_time(review.created_at) %>
                </div>
            <% end %>
        <% else %>
            <p>Отзывы отсутсвуют</p>
        <% end %>   
    </div>
</div>
