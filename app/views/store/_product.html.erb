

  <div class="entry 
                
        <%= is_new(product) %>
        <%= is_hot(product) %>
        <%= is_sale(product) %>">
        
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <p> <strong>Состав: </strong> <%= sanitize(product.description) %></p>
        <div class="price_line">
            <span class="price"><%= to_tenge(product.price) %></span>
            <%= button_to 'В корзину',
                line_items_path(product_id: product),
                remote: true %>
        </div>
    </div>