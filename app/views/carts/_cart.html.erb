<% unless cart.line_items.empty? %>
  <h2>Корзина</h2>
  <table>
   <%= render(cart.line_items) %>
       <tr class="total_line">
           <td colspan="2">Total</td>
   <td class="total_cell"><%= to_tenge(cart.total_price) %></td> </tr>
  </table>
  <%= button_to "Заказать", new_order_path, method: :get %>
  <%= button_to 'Очистить корзину', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
