<% unless cart.line_items.empty? %> 
  <span><%= to_tenge(cart.total_price) %></span> 
  <div id="cart-description">
    <table>
      <%= render partial: "line_items/line_item" , collection: cart.line_items  %>
          <tr class="total_line">
              <td colspan="2">Всего</td>
      <td class="total_cell"><%= to_tenge(cart.total_price) %></td> </tr>
      </table>
      <%= button_to "Заказать", new_order_path, method: :get %>
      <%= button_to 'Очистить корзину', cart, method: :delete, data: { confirm: 'Вы уверены, что хотите очистить корзину?' } %>
    </table>
  </div>
<% else %>      
  <span><%= cart.nil? ? to_tenge(0) : to_tenge(cart.total_price) %></span>
<% end %>
